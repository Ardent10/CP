/* https://www.hackerearth.com/practice/algorithms/string-algorithm/basics-of-string-manipulation/practice-problems/algorithm/unique-subsequence-264057c9/ */
#include<iostream>
using namespace std;

int main()
{
	int t;
   string s;
	
        cin>>t;

	while(t--)
	{
		
		int n,count=1;
		cin>>n;
		
                cin>>s; 
              
               for(int i = 0; (s[i]!='\0'); i++)
               {      
                  if(s[i]!=s[i+1] && (i+1)<n)
                  {
                      count++;
                  }  
               }
                cout<<count<<endl;
        }
          
return 0;
}
